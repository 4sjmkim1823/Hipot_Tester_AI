<UserControl x:Class="Hipot_Tester.View.IRModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hipot_Tester.View"
             xmlns:vm="clr-namespace:Hipot_Tester.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="576"
             d:DesignWidth="280">

    <UserControl.Resources>
        <ResourceDictionary Source="/View/LGResourceDictionary.xaml" />
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:IRModeViewModel />
    </UserControl.DataContext>

    <Border Margin="0,0,10,0"
            BorderBrush="#FF4A4A4A"
            BorderThickness="2"
            Style="{StaticResource LG.Border}"
            CornerRadius="5">
        <Grid Background="#FF1E2A38">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="IR MODE 장비 설정"
                       Style="{StaticResource LG.FontTitle}"
                       VerticalAlignment="Center"
                       Background="{StaticResource LG.HeaderGradient}"
                       Margin="0 10 0 10" />
            <StackPanel Grid.Row="1">
                <TextBlock Text="VOLT"
                           Foreground="{StaticResource LG.WhiteBrush}"
                           Style="{StaticResource LG.FontBodyBold}"
                           FontSize="16"
                           FontFamily="arial"
                           Margin="10,5" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             x:Name="VoltageTextBox"
                             Grid.Column="1"
                             Style="{StaticResource LG.DigitalDisplayTextBox}"
                             Text="{Binding Volt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=N2}" />
                    <TextBlock Text=" V"
                               Grid.Row="0"
                               Grid.Column="2"
                               Style="{StaticResource LG.FontBodyBold}"
                               FontSize="20"
                               VerticalAlignment="Center" />
                </Grid>
                <TextBlock Text="LOW"
                           Foreground="{StaticResource LG.WhiteBrush}"
                           Style="{StaticResource LG.FontBodyBold}"
                           FontSize="16"
                           FontFamily="arial"
                           Margin="10,5" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             x:Name="ResistanceTextBox"
                             Style="{StaticResource LG.DigitalDisplayTextBox}"
                             Text="{Binding Low, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=N2}" />
                    <TextBlock Text=" MΩ"
                               Grid.Row="0"
                               Grid.Column="2"
                               Style="{StaticResource LG.FontBodyBold}"
                               Foreground="{StaticResource LG.WhiteBrush}"
                               FontSize="20"
                               VerticalAlignment="Center" />
                </Grid>
                <TextBlock Text="TIME"
                           Foreground="{StaticResource LG.WhiteBrush}"
                           Style="{StaticResource LG.FontBodyBold}"
                           FontSize="16"
                           FontFamily="arial"
                           Margin="10,5" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Style="{StaticResource LG.DigitalDisplayTextBox}"
                             Text="{Binding Time, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=N2}" />
                    <TextBlock Text=" S"
                               Grid.Row="0"
                               Grid.Column="2"
                               Foreground="{StaticResource LG.WhiteBrush}"
                               Style="{StaticResource LG.FontBodyBold}"
                               FontSize="20"
                               VerticalAlignment="Center" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="HIGH"
                               Grid.Row="0"
                               Foreground="{StaticResource LG.WhiteBrush}"
                               Margin="10,5"
                               FontFamily="arial"
                               FontSize="16" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Style="{StaticResource LG.DigitalDisplayTextBox}"
                             Text="{Binding High, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=N2}" />
                    <TextBlock Text=" mA"
                               Grid.Row="1"
                               Grid.Column="2"
                               Style="{StaticResource LG.FontBodyBold}"
                               FontSize="20"
                               VerticalAlignment="Center" />
                </Grid>
                <TextBlock Text="RAMP"
                           Foreground="{StaticResource LG.WhiteBrush}"
                           Style="{StaticResource LG.FontBodyBold}"
                           FontSize="16"
                           FontFamily="arial"
                           Margin="10,5" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Style="{StaticResource LG.DigitalDisplayTextBox}"
                             Text="{Binding Ramp, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=N2}" />
                    <TextBlock Text=" S"
                               Grid.Row="0"
                               Grid.Column="2"
                               Style="{StaticResource LG.FontBodyBold}"
                               FontSize="20"
                               VerticalAlignment="Center" />
                </Grid>
                <TextBlock Text="DWELL"
                           Foreground="{StaticResource LG.WhiteBrush}"
                           Style="{StaticResource LG.FontBodyBold}"
                           FontSize="16"
                           FontFamily="arial"
                           Margin="10,5" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Style="{StaticResource LG.DigitalDisplayTextBox}"
                             Text="{Binding Dwell, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=N2}" />
                    <TextBlock Text=" S"
                               Grid.Row="0"
                               Grid.Column="2"
                               Style="{StaticResource LG.FontBodyBold}"
                               FontSize="20"
                               VerticalAlignment="Center" />
                </Grid>
                <TextBlock Text="FALL"
                           Style="{StaticResource LG.FontBodyBold}"
                           Foreground="{StaticResource LG.WhiteBrush}"
                           FontSize="16"
                           FontFamily="arial"
                           Margin="10,5" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             FontFamily="{StaticResource digitalfont}"
                             Style="{StaticResource LG.DigitalDisplayTextBox}"
                             Text="{Binding Fall, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=N2}" />
                    <TextBlock Text=" S"
                               Grid.Row="0"
                               Grid.Column="2"
                               Foreground="White"
                               FontSize="20"
                               VerticalAlignment="Center" />
                </Grid>
                <TextBlock Text="RANGE"
                           Foreground="{StaticResource LG.WhiteBrush}"
                           Style="{StaticResource LG.FontBodyBold}"
                           FontSize="16"
                           FontFamily="arial"
                           Margin="10,5" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ComboBox Grid.Row="0"
                              Grid.Column="1"
                              Style="{StaticResource StyleMeasureResultCombo}"
                              ItemsSource="{Binding RangeOptions}"
                              SelectedItem="{Binding SelectedRange, Mode=TwoWay}" />

                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
